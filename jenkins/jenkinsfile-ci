pipeline {
    agent { label 'jenkins-agent' }

    environment {
        IMAGE_NAME = "myapp"
        GCP_PROJECT = "prod-project-477306"
        GCR_REGION = "us"
        IMAGE_TAG = "${BUILD_NUMBER}"
        GCR_IMAGE = "${GCR_REGION}.gcr.io/${GCP_PROJECT}/${IMAGE_NAME}:${IMAGE_TAG}"

        # Kubernetes / GKE variables
        CLUSTER_NAME = "gke-standard-cluster"       // replace with your cluster name
        CLUSTER_ZONE = "us-central1-a"        // replace with your cluster zone
        DEPLOYMENT_NAME = "admin-deployment" // name of your k8s Deployment
        CONTAINER_NAME = "my-app"             // container name inside deployment
        K8S_NAMESPACE = "dev"                 // your deployment namespace
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/abhizarkar7551/app-repo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ./app"
            }
        }

        stage('Push to GCR') {
            steps {
                withCredentials([file(credentialsId: 'my-global-sa', variable: 'GCP_KEY')]) {
                    sh """
                        gcloud auth activate-service-account --key-file=$GCP_KEY
                        gcloud auth configure-docker --quiet
                        docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${GCR_IMAGE}
                        docker push ${GCR_IMAGE}
                    """
                }
            }
        }

        stage('Deploy to GKE') {
            steps {
                withCredentials([file(credentialsId: 'my-global-sa', variable: 'GCP_KEY')]) {
                    sh """
                        # Authenticate to GCP and GKE
                        gcloud auth activate-service-account --key-file=$GCP_KEY
                        gcloud config set project ${GCP_PROJECT}
                        gcloud container clusters get-credentials ${CLUSTER_NAME} --zone ${CLUSTER_ZONE}

                        # Update deployment with the new image in the 'dev' namespace
                        kubectl set image deployment/${DEPLOYMENT_NAME} ${CONTAINER_NAME}=${GCR_IMAGE} -n ${K8S_NAMESPACE}
                        kubectl rollout status deployment/${DEPLOYMENT_NAME} -n ${K8S_NAMESPACE}
                    """
                }
            }
        }
    }

    post {
        success {
            echo "CI/CD Pipeline succeeded: Image pushed and deployed to GKE namespace '${K8S_NAMESPACE}'."
        }
        failure {
            echo "CI/CD Pipeline failed."
        }
    }
}
